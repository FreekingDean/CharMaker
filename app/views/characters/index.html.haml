%p#notice= notice
%h1 Characters
%table
  %thead
    %tr
      %th Name
      %th Height
      %th Weight
      %th Race
      %th Hero class
      %th Experience
      %th{:colspan => "3"}
  %tbody
    - @characters.each do |character|
      %tr
        %td= character.name
        %td= character.height
        %td= character.weight
        %td= character.race_id
        %td= character.hero_class_id
        %td= character.experience
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Character', new_character_path
