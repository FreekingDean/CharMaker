.container
  .well
    = form_for character, html: {class: 'form-inline'} do |f|
      .row
        .form-group.label-floating
          = f.label :name, 'Character Name', class: 'control-label'
          = f.text_field :name, class: 'form-control'
        .form-group.label-floating
          = f.label :level, class: 'control-label'
          = f.number_field :level, class: 'form-control'
        .form-group.label-floating
          = f.label :hero_class, class: 'control-label'
          = f.select :hero_class,
            options_from_collection_for_select(HeroClass.all, 'id', 'name'), {},
            data: {select: 'single'}
        .form-group.label-floating
          = f.label :background, class: 'control-label'
          = f.select :background,
            options_from_collection_for_select(Background.all, 'id', 'name'), {},
            data: {select: 'single'}
        .form-group.label-floating
          = f.label :player_name, class: 'control-label'
          = f.text_field :player_name, class: 'form-control'
      .row
        .form-group.label-floating
          = f.label :race, class: 'control-label'
          = f.select :race,
            options_from_collection_for_select(Race.all, 'id', 'name'), {},
            data: {select: 'single'}
        .form-group.label-floating
          = f.label :alignment, class: 'control-label'
          = f.select :alignment,
            options_from_collection_for_select(Alignment.all, 'id', 'name'), {},
            data: {select: 'single'}
        .form-group.label-floating
          = f.label :experience, class: 'control-label'
          = f.number_field :experience, class: 'form-control'
      .row
        .form-group.label-floating
          = f.label :armor_class, class: 'control-label'
          = f.number_field :armor_class, class: 'form-control'
        .form-group.label-floating
          = f.label :initiative, class: 'control-label'
          = f.number_field :initiative, class: 'form-control'
        .form-group.label-floating
          = f.label :speed, class: 'control-label'
          = f.number_field :speed, class: 'form-control'
      .row
        .form-group.label-floating
          = f.label :hit_points, class: 'control-label'
          = f.number_field :hit_points, class: 'form-control'
      .row
        .form-group.label-floating
          = f.label :personality_traits, class: 'control-label'
          = f.text_field :personality_traits, class: 'form-control'
